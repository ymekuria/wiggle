datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["connectOrCreate"]
}

model User {
  auth0Id  String   @id
  userName String?
  wiggles  Wiggle[]

}

model Wiggle {
  id   Int  @id @default(autoincrement())
  user User @relation(fields: [userId], references: [auth0Id])

  schedule  String // change to enum once all permutations are determined
  // add message type
  contact   Contact @relation(fields: [contactId], references: [id])
  userId    String
  contactId Int
}

model Contact {
  id          Int     @id @default(autoincrement())
  name        String?
  phoneNumber String

  Wiggle Wiggle[]
}
